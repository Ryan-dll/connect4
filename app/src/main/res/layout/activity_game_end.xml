<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameEndActivity">

    <TextView
        android:id="@+id/winner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/new_game"
        android:layout_alignEnd="@id/new_game"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="-2dp"
        android:text="@string/player_won" />

    <Button
        android:id="@+id/new_game"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/winner"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-433dp"
        android:onClick="onPlayGame"
        android:text="@string/new_game" />
</RelativeLayout>